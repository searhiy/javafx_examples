<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.RadioButton?>
<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="javafx.examples.ex33.Controller">

    <Label text="I love becon" fx:id="firstLabel"/>
    <Label text="${firstLabel.text}"/>

    <fx:define>
        <ToggleGroup fx:id="toggleGroup"/>
    </fx:define>

    <Button text="Becon"/>

    <RadioButton text="Easy" toggleGroup="$toggleGroup"/>
    <RadioButton text="Medium" toggleGroup="$toggleGroup"/>
    <RadioButton text="Hard" toggleGroup="$toggleGroup"/>

</VBox>
